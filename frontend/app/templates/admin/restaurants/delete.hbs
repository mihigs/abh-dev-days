<form class="admin-form" {{action "onDeleteRestaurant" on="submit"}}>
  <div class="row">
    <div class="col-xs-12">
      <h1 class="admin-from-title">
        Delete
        {{model.restaurant.name}}
        ?
      </h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12" style="text-align: right">
      {{#link-to
        "admin.restaurants"
        tagName="button"
        class="form-button form-button-extra-small form-button-grey"
      }}
        Cancel
      {{/link-to}}
      <button class="form-button form-button-extra-small" type="submit">
        Delete
        {{model.restaurant.name}}
      </button>
    </div>
  </div>
</form>