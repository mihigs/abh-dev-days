<form class="admin-form" {{action "onSubmitCuisine" on="submit"}}>
  <div class="row">
    <div class="col-xs-12">
      {{input
        class="form-input"
        type="text"
        placeholder="Name"
        value=model.cuisine.name
      }}
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12" style="text-align: right">
      {{#link-to
        "admin.cuisines"
        tagName="button"
        class="form-button form-button-extra-small form-button-grey"
      }}
        Cancel
      {{/link-to}}
      <button class="form-button form-button-extra-small" type="submit">
        {{if model.isEdit "Edit" "Add"}}
        Cuisine
      </button>
    </div>
  </div>
</form>